doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
    script(src="/js/security.js")
  body
    nav
      a(class='active btn', href='/') Home
      a(class='active btn', href='/leaderboard') Leaderboard
      if user
        a(class='btn', href='/u/add-new-trivia') Add Trivia
        if user.isAdmin
          a(class='btn', href='/a/users/user') Users
          a(class='btn', href='/a/pending-trivia') Pending Trivia
        a(class='active btn', href='/g/play') Play
        a(class='btn', href='/u/profile') Profile
        a(class='btn', href='/u/logout') Logout #{user.username}
      else
        a(class='btn', href='/u/login') Login
    block content